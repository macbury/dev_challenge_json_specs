    "intro": {
      "headerTitle": "Explanation",
      "infoItems": {
        "instructions1": {
          "type": "text",
          "title": "Body Mass Index (BMI) is a simple index of weight-for-height that is commonly used to classify underweight, overweight and obesity in adults. It is defined as the weight in kilograms divided by the square of the height in metres (kg/m²)."
        }
      }
    },
    "formula": {
      "headerTitle": "Formula",
      "infoItems": {
        "formula1": {
          "type": "text",
          "title": "BMI = weight / height²"
        }
      }
    },
